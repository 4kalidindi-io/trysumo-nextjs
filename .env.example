# Anthropic API for Trip Planner (server-side only)
ANTHROPIC_API_KEY=your_anthropic_api_key

# NewsAPI for Live News Stream (server-side only)
NEWS_API_KEY=your_newsapi_key

# MongoDB Atlas Connection String
# Get your connection string from: https://cloud.mongodb.com
MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<database>?retryWrites=true&w=majority

# Google AdSense (get from https://adsense.google.com)
# Publisher ID format: ca-pub-XXXXXXXXXXXXXXXX
NEXT_PUBLIC_ADSENSE_PUBLISHER_ID=ca-pub-XXXXXXXXXXXXXXXX
# Ad slot IDs (create ad units in AdSense dashboard)
NEXT_PUBLIC_ADSENSE_SLOT_TOP=1234567890
NEXT_PUBLIC_ADSENSE_SLOT_BOTTOM=0987654321
NEXT_PUBLIC_ADSENSE_SLOT_SIDEBAR=1122334455
